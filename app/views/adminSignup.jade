doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title Signup Form
  body
    section.container
      .login
        h1 Sign up to the Web App
        form(method='post', action='http://localhost:3000/admin/signup')
          p
            input(type='text', name='name', value='', placeholder='Name', required='true')
          p
            input(type='email', name='email', value='', placeholder='Email', required='true')
          p
            input(type='text', name='mobile', value='', placeholder='Mobile Number', required='true')
          p
            input(type='password', name='password', value='', placeholder='Password', required='true')
          p.submit
            input(type='submit', name='', value='Sign up')
